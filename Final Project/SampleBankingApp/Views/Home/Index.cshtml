@{
    ViewData["Title"] = "Welcome to MyBank";
}

<div class="hero-section text-center text-white">
    <div class="container">
        <h1 class="display-4">Welcome to MyBank</h1>
        <p class="lead">Secure. Reliable. Fast Banking.</p>
        <a href="/Auth/Register" class="btn btn-primary btn-lg">Open an Account</a>
    </div>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <h2 class="text-center">Why Choose Us?</h2>
